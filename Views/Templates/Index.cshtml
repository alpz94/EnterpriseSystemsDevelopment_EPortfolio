@model IEnumerable<EnterpriseSystemsDevelopment_EPortfolio.Models.Template>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Software Engineering</h1>
<div>
    <input type="text" placeholder="Search..">
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KsbKey)
            </th>
            <th>
                Description
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evidence)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.KsbKey)
                </td>
                <td>
                    @{ string Description = item.KsbKey.KsbDescription();}
                    <span>@Description</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Evidence)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.TemplateId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TemplateId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
